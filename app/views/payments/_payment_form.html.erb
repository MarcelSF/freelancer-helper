<%= simple_form_for @payment do |f| %>
  <%= f.input :value, label: "Enter the total amount" %>
  <%= f.input :tax_discount, label: "Enter the tax discount" %>
  <%= f.input :project_id, collection: current_user.projects, label: "Choose your project" %>
  <%= f.input :date_of_payment, as: :date, start_year: Date.today.year - 10,
                              end_year: Date.today.year + 12,
                              order: [:day, :month, :year] %>
  <%= f.input :notes, label: "Any additional information?" %>
  <%= f.input :paid %>
  <%= f.button :submit %>
<% end %>
